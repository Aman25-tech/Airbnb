<% layout('layouts/boilerplate.ejs') %>

<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
</script>

<div class="row mt-5">
    <div class="col-8 offset-2">
        <h2 class="display-0 mb-4"><%= listing.title %></h2>
    </div>
    
    <div class="card col-8 offset-2 border-0 shadow-sm" >
        <img class="card-img-top show-img rounded" src="<%= listing.image.url%>" alt="listing image">
        <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
                <i class="fas fa-user-circle fs-4 me-2"></i>
                <p class="card-text mb-0">Owned by: <span class="fw-bold"><%= listing.owner.username %></span></p>
            </div>
            
            <p class="card-text text-muted mb-3"><%= listing.description %></p>
            
            <div class="d-flex align-items-center mb-3">
                <i class="fas fa-map-marker-alt text-danger me-2"></i>
                <p class="card-text mb-0"><%= listing.location %>, <%= listing.country %></p>
            </div>
            
            <div class="d-flex align-items-center">
                <i class="fas fa-rupee-sign text-success me-2"></i>
                <p class="card-text fs-5 fw-bold mb-0"><%= listing.price.toLocaleString('en-IN') %></p>
                <span class="text-muted ms-2">/night</span>
            </div>
        </div>
    </div>

    <div class="btns col-8 offset-2 mt-4 mb-5">
        <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
            <div class="d-flex gap-3">
                <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark px-4">
                    <i class="fas fa-edit me-2"></i>Edit
                </a>
                <form method="post" action="/listings/<%= listing.id %>?_method=DELETE">
                    <button class="btn btn-danger px-4">
                        <i class="fas fa-trash me-2"></i>Delete
                    </button>
                </form>
            </div>
        <% } %>
    </div>
    
    <div class="col-8 offset-2 mb-4">
        <% if(currUser) { %>
            <form method="post" action="/listings/<%= listing.id %>/reviews" 
                  class="needs-validation bg-light p-4 rounded shadow-sm" novalidate>
                <h4 class="mb-3">Leave a Review</h4>
                <fieldset class="starability-basic mb-3">
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />&nbsp;&nbsp;
                    <label for="first-rate1" title="Terrible">1 star</label>&nbsp;
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />&nbsp;&nbsp;
                    <label for="first-rate2" title="Not good">2 stars</label>&nbsp;
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />&nbsp;&nbsp;
                    <label for="first-rate3" title="Average">3 stars</label>&nbsp;
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />&nbsp;&nbsp;
                    <label for="first-rate4" title="Very good">4 stars</label>&nbsp;
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />&nbsp;&nbsp;
                    <label for="first-rate5" title="Amazing">5 stars</label>&nbsp;
              </fieldset>
                <div class="mb-3">
                    <label for="comment" class="form-label">Your Experience</label>
                    <textarea 
                        name="review[comment]" 
                        id="comment" 
                        rows="5" 
                        class="form-control" 
                        required
                        placeholder="Share your thoughts about this place..."
                    ></textarea>
                    <div class="invalid-feedback">
                        Please share your experience
                    </div>
                </div>
                <button class="btn btn-dark px-4">
                    <i class="fas fa-paper-plane me-2"></i>Submit Review
                </button>
            </form>
        <% } %>
        
        <% if(listing.reviews.length > 0) { %>
            <h4 class="mt-5 mb-4">Reviews (<%= listing.reviews.length %>)</h4>
            <div class="row gy-4">
                <% for(review of listing.reviews){ %>
                    <div class="col-md-6">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="d-flex align-items-center">
                                        <p class="starability-result mb-0" data-rating="<%= review.rating %>">
                                            <%= review.rating %> stars
                                        </p>
                                    </div>
                                    <% if(currUser && (
                                        (review.author && review.author._id.equals(currUser._id)) || 
                                        (listing.owner._id.equals(currUser._id))
                                    )) { %>
                                        <form action="/listings/<%= listing.id %>/reviews/<%= review.id %>?_method=DELETE" 
                                              method="post" class="d-inline">
                                            <button class="btn btn-sm btn-outline-danger" 
                                                    title="Delete Review"
                                                    onclick="return confirm('Are you sure you want to delete this review?')">
                                                <i class="fas fa-trash me-1"></i>Delete
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                                <p class="card-text text-muted"><%= review.comment %></p>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>

    <div class="col-8 offset-2 mb-5">
        <h3 class="mb-4">Location</h3>
        <div id="map" class="rounded shadow-sm" style="height: 400px;"></div>
    </div>
</div>

<script src="/js/map.js"></script>